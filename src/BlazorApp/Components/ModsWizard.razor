@using System.Linq
@inject DecorationIndexService DecorationIndex
@inject ModalStateService ModalState
@inject AssetStoreService AssetStore
@implements IDisposable

<div class="mods-modal-backdrop @(ModalState.IsOpen ? "show" : string.Empty)" data-testid="mods-modal" aria-hidden="@(!ModalState.IsOpen)">
    <div class="mods-modal" role="dialog" aria-modal="true">
        <header class="mods-modal__header">
            <div>
                <div class="mods-modal__title">Load mods</div>
                <div class="mods-modal__step">Step @currentStep of 2</div>
            </div>
            <button class="btn btn-outline-secondary" type="button" @onclick="CloseModal">Close</button>
        </header>
        <div class="mods-modal__content">
            @if (currentStep == StepUpload)
            {
                <div class="dropzone" data-testid="wizard-step-1">
                    <div class="dropzone__hint">Drop mod file here</div>
                    <InputFile OnChange="HandleFileSelected" class="dropzone__input" data-testid="mod-file-input" />
                    <div class="dropzone__status @(scanSucceeded ? "success" : string.Empty)" data-testid="mod-file-status">
                        @if (currentFile is null)
                        {
                            <span>Status: No file selected</span>
                        }
                        else if (isScanning)
                        {
                            <span>Scan: in progress...</span>
                        }
                        else if (!string.IsNullOrWhiteSpace(scanStatus))
                        {
                            <span>@scanStatus</span>
                        }
                        else
                        {
                            <span>Scan: pending</span>
                        }
                    </div>
                </div>
                @if (DecorationIndex.LastUnityPackageInventory is not null && DecorationIndex.LastUnityPackageInventory.Anchors.Count > 0)
                {
                    <div class="wizard-list" data-testid="unitypackage-anchors">
                        <div class="wizard-list__title">Anchor points: @DecorationIndex.LastUnityPackageInventory.Anchors.Count found</div>
                    </div>
                }
            }
            else
            {
                <div class="wizard-list" data-testid="wizard-step-2">
                    <div class="wizard-list__title">Files grouped by body part</div>
                    @if (DecorationIndex.Entries.Count == 0 && DecorationIndex.LastUnityPackageInventory is not null)
                    {
                        <div style="padding: 1rem; color: #666;">
                            <p>Unitypackage uploaded with @DecorationIndex.LastUnityPackageInventory.Anchors.Count anchor point(s).</p>
                            <p>Ready to close modal or load additional mod files.</p>
                        </div>
                    }
                    else if (DecorationIndex.Entries.Count == 0)
                    {
                        <div style="padding: 1rem; color: #999;">No files found.</div>
                    }
                    else
                    {
                        @foreach (var group in DecorationIndex.Entries
                            .GroupBy(entry => entry.BodyPart)
                            .OrderBy(group => group.Key))
                        {
                            <div class="wizard-group">
                                <div class="wizard-group__title">@group.Key (@group.Count())</div>
                                <ul class="wizard-group__list">
                                    @foreach (var entry in group.OrderBy(item => item.FilePath))
                                    {
                                        <li>
                                            <div class="wizard-file">
                                                <div>
                                                    <div class="wizard-file__name">@DecorationNameFormatter.GetDisplayName(entry.FilePath)</div>
                                                    <div class="wizard-file__meta">@FormatFileSize(entry.SizeBytes)</div>
                                                </div>
                                                <span class="wizard-status @GetStatusClass(entry)">@GetStatusLabel(entry)</span>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    }
                </div>
            }
        </div>
        <footer class="mods-modal__footer">
            @if (currentStep == StepUpload)
            {
                <button class="btn btn-outline-secondary" type="button" @onclick="GoBack" disabled data-testid="wizard-back">Back</button>
                <button class="btn btn-primary" type="button" @onclick="GoNext" disabled="@(!CanProceed)" data-testid="wizard-next">Next</button>
            }
            else
            {
                if (processingComplete)
                {
                    <button class="btn btn-outline-secondary" type="button" @onclick="ResetToUpload" data-testid="wizard-reset">Load new mod</button>
                }
                else
                {
                    <button class="btn btn-outline-secondary" type="button" @onclick="GoBack" disabled="@isProcessing" data-testid="wizard-back">Back</button>
                }

                if (processingComplete)
                {
                    <button class="btn btn-primary" type="button" @onclick="CloseModal" data-testid="wizard-close">Close</button>
                }
                else
                {
                    <button class="btn btn-primary" type="button" @onclick="ProcessAllAsync" disabled="@(!CanProcess)" data-testid="wizard-process">@(isProcessing ? "Processing..." : "Process")</button>
                }
            }
        </footer>
    </div>
</div>

@code {
    private const int StepUpload = 1;
    private const int StepReview = 2;
    private int currentStep = StepUpload;
    private IBrowserFile? currentFile;
    private bool isScanning;
    private bool scanSucceeded;
    private string? scanStatus;
    private bool isProcessing;
    private bool processingComplete;
    private readonly Dictionary<string, ProcessStatus> processingStatus = new();
    private const int ProcessingDelayMs = 120;

    private bool CanProceed => (DecorationIndex.LastScanSucceeded && DecorationIndex.Entries.Count > 0)
        || (DecorationIndex.LastUnityPackageScanSucceeded && DecorationIndex.LastUnityPackageInventory is not null);
    private bool CanProcess => !isProcessing && (DecorationIndex.Entries.Count > 0
        || (DecorationIndex.LastUnityPackageScanSucceeded && DecorationIndex.LastUnityPackageInventory is not null));

    protected override void OnInitialized()
    {
        ModalState.OnChange += HandleModalChange;
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs args)
    {
        currentFile = args.File;
        isScanning = true;
        scanSucceeded = false;
        scanStatus = "Scan: starting...";

        try
        {
            const long maxBytes = 1024L * 1024L * 512L; // 512 MB
            await using var stream = currentFile.OpenReadStream(maxBytes);
            using var buffer = new MemoryStream();
            await stream.CopyToAsync(buffer);
            var fileBytes = buffer.ToArray();

            var fileType = DetectFileType(fileBytes);

            if (fileType == FileType.UnityPackage)
            {
                await DecorationIndex.ScanUnityPackageAsync(fileBytes, currentFile.Name);
                scanSucceeded = DecorationIndex.LastUnityPackageScanSucceeded;
                scanStatus = DecorationIndex.LastUnityPackageScanMessage ?? "Scan complete.";
            }
            else
            {
                await DecorationIndex.ScanZipAsync(fileBytes, currentFile.Name);
                scanSucceeded = DecorationIndex.LastScanSucceeded;
                scanStatus = DecorationIndex.LastScanMessage ?? "Scan complete.";
            }
        }
        catch (Exception ex)
        {
            scanSucceeded = false;
            scanStatus = $"Scan failed: {ex.Message}";
        }

        ResetProcessingState();
        isScanning = false;
    }

    private static FileType DetectFileType(byte[] fileBytes)
    {
        if (fileBytes.Length >= 2)
        {
            if (fileBytes[0] == 0x1F && fileBytes[1] == 0x8B)
            {
                return FileType.UnityPackage;
            }
            if (fileBytes[0] == 0x50 && fileBytes[1] == 0x4B)
            {
                return FileType.Zip;
            }
        }
        return FileType.Zip;
    }

    private static string FormatFileSize(long bytes)
    {
        const decimal kilo = 1024m;
        const decimal mega = 1024m * 1024m;

        if (bytes >= mega)
        {
            return $"{bytes / mega:0.##} MB";
        }

        return $"{bytes / kilo:0.##} KB";
    }

    private void CloseModal()
    {
        ResetProcessingState();
        currentStep = StepUpload;
        currentFile = null;
        isScanning = false;
        scanSucceeded = false;
        scanStatus = null;
        ModalState.Close();
    }

    private void GoNext()
    {
        if (currentStep == StepReview)
        {
            CloseModal();
            return;
        }

        if (CanProceed)
        {
            currentStep = StepReview;
        }
    }

    private void GoBack()
    {
        if (currentStep == StepReview)
        {
            currentStep = StepUpload;
        }
    }

    private void ResetToUpload()
    {
        ResetProcessingState();
        currentStep = StepUpload;
        currentFile = null;
        isScanning = false;
        scanSucceeded = false;
        scanStatus = null;
    }

    private void ResetProcessingState()
    {
        isProcessing = false;
        processingComplete = false;
        processingStatus.Clear();
    }

    private string GetStatusKey(DecorationEntry entry)
        => entry.FilePath;

    private ProcessStatus GetStatus(DecorationEntry entry)
    {
        var key = GetStatusKey(entry);
        return processingStatus.TryGetValue(key, out var status) ? status : ProcessStatus.Queued;
    }

    private string GetStatusLabel(DecorationEntry entry)
        => GetStatus(entry).ToString();

    private string GetStatusClass(DecorationEntry entry)
        => GetStatus(entry) switch
        {
            ProcessStatus.Processing => "wizard-status--processing",
            ProcessStatus.Done => "wizard-status--done",
            ProcessStatus.Failed => "wizard-status--failed",
            _ => "wizard-status--queued"
        };

    private async Task ProcessAllAsync()
    {
        isProcessing = true;
        processingComplete = false;

        foreach (var entry in DecorationIndex.Entries.OrderBy(item => item.FilePath))
        {
            var key = GetStatusKey(entry);
            processingStatus[key] = ProcessStatus.Queued;
        }

        foreach (var entry in DecorationIndex.Entries.OrderBy(item => item.FilePath))
        {
            var key = GetStatusKey(entry);
            processingStatus[key] = ProcessStatus.Processing;
            await InvokeAsync(StateHasChanged);

            try
            {
                var now = DateTimeOffset.UtcNow.ToUnixTimeMilliseconds();
                await Task.Delay(ProcessingDelayMs);
                await AssetStore.TouchProcessedAsync(entry.Sha256, now, now);
                processingStatus[key] = ProcessStatus.Done;
            }
            catch
            {
                processingStatus[key] = ProcessStatus.Failed;
            }

            await InvokeAsync(StateHasChanged);
        }

        isProcessing = false;
        processingComplete = true;
    }

    private void HandleModalChange()
    {
        if (ModalState.IsOpen && currentStep != StepUpload)
        {
            currentStep = StepUpload;
        }

        _ = InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        ModalState.OnChange -= HandleModalChange;
    }

    private enum ProcessStatus
    {
        Queued,
        Processing,
        Done,
        Failed
    }

    private enum FileType
    {
        Zip,
        UnityPackage
    }
}
