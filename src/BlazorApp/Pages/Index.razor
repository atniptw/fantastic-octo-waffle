@page "/"
@using BlazorApp.Models
@using BlazorApp.Services
@inject IThunderstoreService ThunderstoreService
<PageTitle>R.E.P.O. Mod Browser</PageTitle>

<div class="container mt-4">
    <h1>Cosmetic Mods</h1>
    <p class="text-muted">Browse R.E.P.O. cosmetic mods from Thunderstore</p>
    
    @if (_loading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Fetching cosmetic mods from Thunderstore...</p>
            <small class="text-muted">This may take a few seconds on first load</small>
        </div>
    }
    else if (_error != null)
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Error Loading Mods</h4>
            <p>@_error</p>
            <hr>
            <button class="btn btn-primary" @onclick="LoadPackagesAsync">Retry</button>
        </div>
    }
    else if (_packages == null || _packages.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            <p class="mb-0">No cosmetic mods found.</p>
        </div>
    }
    else
    {
        <div class="row mod-card-grid">
            @foreach (var package in _packages)
            {
                var latestVersion = package.LatestVersion;
                if (latestVersion == null) continue;
                
                <div class="col-md-4 col-sm-6 mb-3">
                    <div class="card mod-card">
                        @if (package.Icon != null)
                        {
                            <img src="@package.Icon" class="card-img-top" alt="@package.Name icon" />
                        }
                        <div class="card-body">
                            <h5 class="card-title">@package.Name</h5>
                            <p class="card-text text-muted">by @package.Owner</p>
                            <p class="card-text"><small>@latestVersion.Description</small></p>
                            <p class="card-text"><small>Version: @latestVersion.VersionNumber</small></p>
                            <a href="mod/@package.Owner/@package.Name" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<ThunderstorePackage>? _packages;
    private bool _loading = true;
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        await LoadPackagesAsync();
    }

    private async Task LoadPackagesAsync()
    {
        _loading = true;
        _error = null;
        
        try
        {
            var allPackages = await ThunderstoreService.GetPackagesAsync();
            
            // Filter for Cosmetics category and non-deprecated
            _packages = allPackages
                .Where(p => p.Categories.Contains("Cosmetics") && !p.IsDeprecated)
                .OrderByDescending(p => p.DateUpdated)
                .ToList();
        }
        catch (HttpRequestException ex)
        {
            _error = ex.StatusCode switch
            {
                System.Net.HttpStatusCode.NotFound => "Mod service temporarily unavailable",
                System.Net.HttpStatusCode.InternalServerError => "Mod service temporarily unavailable",
                _ => "Unable to connect to mod service"
            };
        }
        catch (TaskCanceledException)
        {
            _error = "Unable to connect to mod service";
        }
        catch (System.Text.Json.JsonException)
        {
            _error = "Invalid response from mod service";
        }
        catch (NotSupportedException)
        {
            _error = "Invalid response from mod service";
        }
        catch (Exception)
        {
            _error = "An error occurred. Please try again.";
        }
        finally
        {
            _loading = false;
        }
    }
}
