@inherits LayoutComponentBase
@inject ModalStateService ModalState

<div class="planner-shell">
    <header class="planner-topbar">
        <div class="planner-brand">
            <div class="planner-title">R.E.P.O Outfit Planner</div>
            <div class="planner-subtitle">Outfit builder</div>
        </div>
        <div class="planner-actions">
            <button class="btn btn-outline-primary" type="button" @onclick="ModalState.Open" data-testid="load-mods-button">Load mods</button>
            <button class="btn btn-primary" type="button">Export Outfit</button>
        </div>
    </header>

    <main class="planner-main">
        @Body
    </main>
</div>
